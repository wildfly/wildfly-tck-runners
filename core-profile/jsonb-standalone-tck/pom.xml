<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <!-- Just for staging proflie access (-Pstaging) for unreleased Jakarta APIs -->
    <parent>
        <groupId>org.wildfly.tck</groupId>
        <artifactId>core-tck-runner-parent</artifactId>
        <version>1.0.0-SNAPSHOT</version>
    </parent>

    <artifactId>jsonb-standalone-tck-runner</artifactId>
    <name>WildFly Jakarta JSON-B Standalone TCK Runner</name>
    <dependencies>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-api</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter-engine</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.netbeans.tools</groupId>
            <artifactId>sigtest-maven-plugin</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>jakarta.json.bind</groupId>
            <artifactId>jakarta.json.bind-tck</artifactId>
            <version>${jsonb.api.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.weld.se</groupId>
            <artifactId>weld-se-core</artifactId>
            <version>${weld.version}</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-antrun-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>process-test-classes</phase>
                        <goals>
                            <goal>run</goal>
                        </goals>
                        <configuration>
                            <!-- Export the properties defined below so they can be used for the signature tests -->
                            <exportAntProperties>true</exportAntProperties>
                            <target>
                                <fileset id="json-jar"
                                         dir="${jboss.home}${file.separator}modules/system/layers/base/jakarta/json/api/main/">
                                    <include name="**/jakarta.json-api*.jar"/>
                                </fileset>
                                <pathconvert pathsep="${path.separator}"
                                             property="jakarta.json.jar" refid="json-jar"/>
                                <fileset id="jsonb-jar"
                                         dir="${jboss.home}${file.separator}modules/system/layers/base/jakarta/json/bind/api/main/">
                                    <include name="**/jakarta.json.bind-api*.jar"/>
                                </fileset>
                                <pathconvert pathsep="${path.separator}"
                                             property="jakarta.jsonb.jar" refid="jsonb-jar"/>
                                <fileset id="parsson-jar"
                                         dir="${jboss.home}/modules/system/layers/base/org/eclipse/parsson/main/">
                                    <include name="**/parsson*.jar"/>
                                </fileset>
                                <pathconvert pathsep="${path.separator}" property="parsson.jar" refid="parsson-jar"/>
                                <fileset id="yasson-jar"
                                         dir="${jboss.home}/modules/system/layers/base/org/eclipse/yasson/main/">
                                    <include name="**/yasson*.jar"/>
                                </fileset>
                                <pathconvert pathsep="${path.separator}" property="yasson.jar" refid="yasson-jar"/>
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
                <executions>
                    <execution>
                        <id>json-bind-tck-tests</id>
                        <phase>test</phase>
                        <goals>
                            <goal>test</goal>
                        </goals>
                        <configuration>
                            <skip>false</skip>
                            <additionalClasspathElements>
                                <additionalClasspathElement>${parsson.jar}</additionalClasspathElement>
                                <additionalClasspathElement>${yasson.jar}</additionalClasspathElement>
                                <additionalClasspathElement>${jakarta.json.jar}</additionalClasspathElement>
                                <additionalClasspathElement>${jakarta.jsonb.jar}</additionalClasspathElement>
                            </additionalClasspathElements>
                            <dependenciesToScan>
                                <dependenciesToScan>jakarta.json.bind:jakarta.json.bind-tck</dependenciesToScan>
                            </dependenciesToScan>
                            <trimStackTrace>false</trimStackTrace>
                            <failIfNoTests>true</failIfNoTests>
                            <forkCount>1</forkCount>
                            <reuseForks>false</reuseForks>
                            <systemPropertyVariables>
                                <jimage.dir>${jimage.dir}</jimage.dir>
                                <signature.sigTestClasspath>
                                    ${jakarta.jsonb.jar}:${jimage.dir}/java.base:${jimage.dir}/java.rmi:${jimage.dir}/java.sql:${jimage.dir}/java.naming
                                </signature.sigTestClasspath>
                                <!-- https://github.com/eclipse-ee4j/jsonb-api/issues/272,330 -->
                                <java.locale.providers>COMPAT</java.locale.providers>
                            </systemPropertyVariables>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>

